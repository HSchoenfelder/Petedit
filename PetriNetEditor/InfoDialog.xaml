<Window x:Class="PetriNetEditor.InfoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Name="InfoWindow">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Content="{Binding ElementName=InfoWindow, Path=Message}"/>
        <WrapPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,10,0, 0">
            <Button IsDefault="True" Name="btnOk" Click="btnOk_Click" MinWidth="60" Margin="0,0,0,0">_Ok</Button>
        </WrapPanel>
    </Grid>
</Window>
